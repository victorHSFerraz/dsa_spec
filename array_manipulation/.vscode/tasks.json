{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-I./include",
                "-g",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/bin/myApp.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-I./include",
                "-I./tests",
                "-g",
                "${workspaceFolder}/tests/test_suites/*.c",
                "${workspaceFolder}/tests/test_main.c",
                "${workspaceFolder}/tests/unity/unity.c",
                "-o",
                "${workspaceFolder}/bin/testRunner.exe"
            ]
        }
    ]
}